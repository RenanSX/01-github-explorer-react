{
  "compilerOptions": {                               
    "lib": ["DOM", "DOM.Iterable", "esnext"],   
    "allowJs": true,                             
    "resolveJsonModule": true,  
    "jsx": "react-jsx",   
    "moduleResolution": "node",                
    "noEmit": true,                      
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,
    "strict": true,     
    "isolatedModules": true,                     
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
